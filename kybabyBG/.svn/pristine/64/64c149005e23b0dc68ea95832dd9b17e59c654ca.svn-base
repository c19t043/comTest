*{
	margin:0;
	padding:0;
}
header{
	width:1000px;
	margin:40px auto 0 auto;
	height:35px;
	line-height:35px;
	background:#50c1e9;
	color:#fff;
	text-indent:20px;
	font-weight:bold;
}
.person{
	width:1000px;
	margin:0 auto;
}
.person .person_doctor,.person .person_user{
	width:1000px;
	height:25px;
	text-align:left;
	text-indent:20px;
	line-height:25px;
	color:#fff;
	font-size:14px;
	background:orange;
}
.content{
	width:998px;
	margin:0 auto;
	border:1px solid #50c1e9;
	padding-top:20px;
}
.content_doctor h4{
	height: 25px;
  line-height: 25px;
  text-indent: 20px;
  font-weight: normal;
  color: rgb(56, 56, 255);
}
.content_user h4{
	height: 25px;
  line-height: 25px;
  text-indent: 20px;
  font-weight: normal;
  color: green;	
}
section{
  color: #666;
  margin: 10px 0 20px 40px;
  width: 600px;
  line-height: 150%;
}