@charset "utf-8";

/*地址管理*/
.mt_50 {
    margin-top: 50px;
}

.mt_20 {
    margin-top: 20px;
}

.add_box {
    width: 90%;
    padding: 10px 5%;
    clear: both;
    overflow: hidden;
    background: #fff;
    color: #969696;
}

.add_box_left {
    width: 90%;
    float: left;
    line-height: 25px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.icon_point {
    width: 10px;
    height: 10px;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
    background: #fff;
    border: 2px solid #4fc1e9;
    float: left;
    margin-top: 20px;
}

.on {
    background: #4fc1e9;

}

.add_details {
    margin-left: 20px;
}

.add_details p {
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.add_box_right {
    margin-left: 90%;
    text-align: right;
    line-height: 50px;
    font-size: 2em;
}

/*新增地址 修改地址*/
.address_normal,
.address_detial {
    width: 92%;
    padding: 0 4%;
    background: #fff;
    line-height: 50px;
}

.address_detial {
    color: #c8c8c8;
}

.address_detial input {
    border: none;
    width: 100%;
}

#city {
    width: 100%;
    color: darkgrey;
}

#city select {
    width: 25%;
    color: #000;
    border: 0;
    margin: 0 0 0 10px;
    outline: 0;
    background-color: #fff;
}