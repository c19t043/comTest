.noteTag{
	width: 94%;
	font-size: 12px;
	margin-left: 3%;
	height: 90%;
	padding-top: 3%;
	overflow-y: auto;
}
.noteTag .tagName{
    background: #c0c0c0;
    padding: 4px 6px;
    border-radius: 4px;
    color: #fff;
    float: left;
    margin: 4px;
}
.blue{
	background:#1cba93 !important;
}
/**/
.showTag{
    height: 300px;
    width: 80%;
    position: fixed;
    top: -280px;
    left: 10%;
}
.tag_up{
    height: 46%;
    width: 100%;
}
.tag_up .a{
    width: 20%;
    height: 100%;
    float: left;
}
.tag_up .b{
    width: 60%;
    height: 100%;
    float: left;
    outline: 3px solid #c0c0c0;
}
.tag_up .c{
    width: 20%;
    height: 100%;
    float: left;
}
.tag_list{
    width: 100%;
    height: 53%;
    background: #f7f7f7;
    position: relative;
    outline: 1px solid #1cba93;
}
.showTagList{
width: 40%;
    margin-left: 30%;
    height: 25px;
    font-size: 11px;
    color: #1cba93;
    background-image: -webkit-linear-gradient(bottom, #efefef, #fcfcfc 100%);
    text-align: center;
    line-height: 25px;
    font-weight: bold;
    background: url(../images/tag-show.png) no-repeat 7% center;
    background-size: 10px;
}
.showTagList:after{
	position: relative;
	left: 0px;
	bottom: 0px;
	height: 2px;
	width: 100%;
	content: ' ';
	display: block;
	background: #1cba93;
}