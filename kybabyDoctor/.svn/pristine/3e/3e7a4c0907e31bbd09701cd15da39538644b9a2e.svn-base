.article_con {
  height: 80px;
  background: #fff;
}

.article_con h3{
font-size: 17px;
    text-indent: 12px;
    line-height: 55PX;
    height: 55px;
    width: 90%;
    color: #4A4A4A;
    overflow-x: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.con_row2{
    padding:0 12px ;
    height: 25px;
}
.con_row2 span{
    font-size: 12px;
    color: #969696;

    display: inline-block;
    overflow-x: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;


}
span.row2_user{
    width: 50px;
    float:left;
}
span.row2_time{
    width: 90px;
    margin-left: 15px;
    float:left;
}

span.row2_view{
    background: url(../images/normalicon/yanjing.png) 0px center no-repeat;
    background-size: 19px;
    text-indent: 20px;
    float: right;
    margin-left: 15px;
}
span.row2_chat{
    background: url(../images/normalicon/xinxi.png) 0px center no-repeat;
    background-size: 16px;
    text-indent: 18px;
    float: right;
    margin-left: 10px;
}
.jingtie{
background: url(../images/jingtie_ico.png) left top no-repeat;
    background-size: 30px;
}
