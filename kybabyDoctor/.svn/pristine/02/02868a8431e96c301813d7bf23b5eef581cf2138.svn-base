@charset "utf-8";
.row{
    width: 100%;
    background-color: white;
    overflow: hidden;
}
.row label{
    display: inline-block;
    line-height: 55px;
    margin-left: 5%;
    width: 25%;
}
.row input{
    width: 60%;
    margin-left: 2%;
    border: none;
    outline: none;
    background:#fff;
}
.row select{
    width: 60%;
    border: none;
    outline: none ;
    margin-left: 1.8%;
    background: #fff;
}
.row img{
   width: 100px;
    height: 40px;
    margin-left: 5%;
}
.row .tittle{
    display: inline-block;
    line-height: 25px;
    margin-left: 5%;
}
.row ul{
    list-style: none;
    width: 95%;
    margin-top: 5px;
}
.row ul li{
    float: left;
    text-align: left;
    margin-left: 5%;
    margin-bottom: 15px;
}
.blue{
    padding: 5px 10px;
    border-radius: 5px;
    color: white;
    background-color:#1cba93 ;
    font-size: 0.875em;
}
.grey{
    padding: 5px 10px;
    border-radius: 5px;
    background-color: #F7F7F7;
    color: #969696;
    font-size: 0.875em;
}

#showDoctor_img,#show_img{
	/*border: 1px solid #C1C1C1;*/
    position: absolute;
    top: 5px;
    left: 0;
}
#touxiang,#zhizhao{
  float: left;
  width: 70%;
  height: 50px;
  position:relative
}
#doctorCanvas,#myCanvas{
  position: absolute;
  top: 5px;
  left: 0;
	display:none;
	width:40px;
	height:40px;
	 margin-left:5%;
}
#updateDoctorHeadFileElem,#updateMyHeadFileElem{
  display: block;
  height: 40px;
  width: 40px;
  position: absolute;
  top: 5px;
  opacity: 0;
  z-index:2;
}

#promptDiv{
    color: red;
    font-size: 10px;
    background: #fff;
    text-align: center;
    text-decoration: underline;
    font-family: '����';
    display:none;
}
/*ѡ��ҽԺ����*/
#choosehospital{
    position: fixed;
    top: 120px;
    left: 6%;
    width: 88%;
    height: 270px;
    outline: 1px solid #1cba93;
    background: #fff;
    font-size: 14px;
    display:none;
    z-index:10;
}
#areabox,#hosbox{
    width: 100%;
    line-height: 35px;
    text-indent: 8px;
    margin-top: 10px;
    color: #A9A9A9;
    margin-bottom: 10px;
}
#choosehospital label{
	color: #1cba93;
}
#areabox input{
    width: 150px;
    height: 25px;

    margin-left: 18px;
    background: #fff;
    border: 1px solid #B3B3B3;
    text-indent: 15px;
}
#hosbox select{
	margin-left: 18px;
	max-width: 220px;
	display: block;
}
.clib{
    width: 80%;
    margin: 40px auto 0;
    background: #1cba93;
    color: #fff;
    height: 40px;
    line-height: 40px;
    text-align: center;
    border-radius: 4px;
    font-size: 18px;
}
h7{
    text-indent: -999px;
    display: inline-block;
    width: 35px;
    height: 35px;
    background: url("../images/iconfont-guanbi.png") no-repeat center;
    background-size: 35px;
    float: right;
}
h7:after{
	content:"xx";
	clear:both;
}
#areabox span{
    display: inline-block;
    width: 60px;
    height: 27px;
    background: #1cba93 url("../images/iconfont-sousuo.png") no-repeat center;
    background-size: 21px;
    text-indent: -999px;
    position: relative;
    top: 4px;
    border-radius: 4px;
}
