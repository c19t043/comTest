@charset "utf-8";
body{background: #f7f7f7;}

.tiezi_list {
    width: 90%;
    padding: 0 5%;
    height: 50px;
    background: #fff;
    clear: both;
    overflow: hidden;
}
.tiezi_list .tiezi_left {
    float: left;
    line-height: 50px;
    padding-left: 15%;
    width: 25%;
}
.tiezi_list .tiezi_center {
    float: left;
    line-height: 50px;
    width: 60%;
    text-align: right;
    color: #c8c8c8;
}
.tiezi_list .tiezi_right {
    float: right;
    font-size: 2.5em;
    color: #c8c8c8;
    width: 20%;
    text-align: right;
}
.tiezi_list .list01 {
    background: url(../images/account_icon01.png) no-repeat left center;
    width: 100%;
    height: 50px;
    background-size: 30px 30px;
}
.tiezi_list .list02 {
    background: url(../images/account_icon02.png) no-repeat left center;
    width: 100%;
    height: 50px;
    background-size: 30px 30px;
}
#myTieziList{
    width: 100%;
    line-height: 40px;
    color: #C4C4C4;
    overflow: hidden;
    text-align: center;
    margin-top: 70px;
    background: #f7f7f7;
}
#myTieziList>div{
    width: 33.3%;
    float: left;
    border-right:2px solid  #C4C4C4;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.activeColor{
    color: #ff813d;
}
#myTieziList>div:nth-child(3){
    border-right:2px solid  white;
}
/*--------------------*/
#container{
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    margin-top: 20px;
}
ul,li{
    list-style: none;
}
ul{
    overflow: hidden;
    border-bottom: 1px solid #C4C4C4;
    padding: 10px 0px;
}
li{
    float: left;
    text-align: center;
    line-height: 34px;
}
.tieziType{
    width: 12%;
    border: 1px solid #bbbbbb;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.tieziName{
    width: 60%;
    margin-left: 4%;
    text-align: left;
}
.sendName{
    width: 20%;
    margin-left: 4%;
}
.sendTime{
    width: 20%;
    float: right;
}
.article_con {
    height: 80px;
    background: #fff;
}

.article_con h3{
    font-size: 17px;
    text-indent: 10px;
    line-height: 55PX;
    height: 55px;
    width: 92%;
    margin: auto;
    color: #4A4A4A;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.con_row2{
    width: 96%;
    height: 25px;
    margin: auto;
}
.con_row2 span{
    font-size: 12px;
    color: #969696;

    display: inline-block;
    overflow-x: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;


}
span.row2_user{
    width: 50px;
    text-align: center;
    float:left;
}
span.row2_time{
    width: 90px;
    margin-left: 15px;
    float:left;
}

span.row2_view{
    background: url(../images/yanjing_ico.png) 0px center no-repeat;
    background-size: 19px;
    text-indent: 20px;
    float: right;
    margin-left: 15px;
}
span.row2_chat{
    background: url(../images/xinxi_ico.png) 0px center no-repeat;
    background-size: 19px;
    text-indent: 20px;
    float: right;
    margin-left: 10px;
}
.jingtie{
    background: url(../images/jingtie_ico.png) left top no-repeat;
    background-size: 30px;
}
/*----------------------*/
.noteTag{
    width: 94%;
    font-size: 12px;
    margin-left: 3%;
    height: 90%;
    padding-top: 3%;
    overflow-y: auto;
}
.noteTag .tagName{
    background: #c0c0c0;
    padding: 4px 6px;
    border-radius: 4px;
    color: #fff;
    float: left;
    margin: 4px;
}
.blue{
    background:#50c1e9 !important;
}
/**/
.showTag{
    height: 300px;
    width: 80%;
    position: fixed;
    top: -280px;
    left: 10%;
}
.tag_up{
    height: 46%;
    width: 100%;
}
.tag_up .a{
    width: 20%;
    height: 100%;
    float: left;
}
.tag_up .b{
    width: 60%;
    height: 100%;
    float: left;
    outline: 3px solid #c0c0c0;
}
.tag_up .c{
    width: 20%;
    height: 100%;
    float: left;
}
.tag_list{
    width: 100%;
    height: 53%;
    background: #f7f7f7;
    position: relative;
    outline: 1px solid #6dd9ff;
}
.showTagList{
    width: 40%;
    margin-left: 30%;
    height: 25px;
    font-size: 11px;
    color: #53ae2a;
    background-image: -webkit-linear-gradient(bottom, #efefef, #fcfcfc 100%);
    text-align: center;
    line-height: 25px;
    font-weight: bold;
    background: url(../images/tag-show.png) no-repeat 7% center;
    background-size: 10px;
}
.showTagList:after{
    position: relative;
    left: 0px;
    bottom: 0px;
    height: 2px;
    width: 100%;
    content: ' ';
    display: block;
    background: #53AE2A;
}

#article_list h3 span{
    border-radius: 100%;
    border: 2px solid rgb(179, 212, 252);
    font-size: 8px;
    padding: 1px 2px;
    position: relative;
    top: -5px;
    left: 0px;
}
#article_list h3 span.gray{
    color: #C4C4C4;
}
#article_list h3 span.yellow{
    color: #D6D655;
}
.gra{
    width: 100%;
    background: #efefef none repeat scroll 0% 0%;
    height: 4px;
}