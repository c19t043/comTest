@charset "utf-8";

.blue_top {
	color: #ff813d;
	text-align: center;
	line-height: 40px;
	/*background: #fff;*/
}
.symptom_box {
	width: 90%;
	padding: 3px 5%;
	background: #fff;
	clear: both;
	overflow: hidden;
	position: relative;
}
.small {
	font-size: 15px;
	margin: 8px 0;
}
.button_11.select {
	background: url("../images/images_family_doctor/erbao_point_light.png")no-repeat;
	background-size: 100% 100%;
	color: #fff;
}
.sym_tag_a {
	margin: 8px 0 0;
	overflow: hidden;
	height: 35px;
	width: 90%;
}
.small_add {
	width: 30px;
	height: 30px;
	background: url("../images/images_family_doctor/add.png") no-repeat center center;
	background-size: 30px;
	position: absolute;
	top: 41px;
	right: 10px;
}
.sym_fill {
	width: 90%;
	padding: 10px;
	margin: 10px auto;
	border: 1px solid #000;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	font-size: .875em;
	overflow:hidden;
	resize:none;
}
.big_add {
	background: url("../images/icon_add.png") no-repeat left center;
	background-size: 50px;
	height: 50px;
	line-height: 50px;
	padding-left: 60px;
	color: #c8c8c8;
	font-size: 0.875em;
}
.sym_img {
	background: url("../images/icon_plus.jpg") no-repeat center center;
	background-size: 100px;
	width: 100px;
    min-height: 100px;
    max-height: 500px;
	position:relative;
}
/*新增*/
#doctor_information{
	text-align: center;
}
#doctor_head{
	border: 1px solid #eee;
	display: inline-block;
	width: 75px;
	height: 75px;
	border-radius: 75px;
	overflow: hidden;
}
#doctor_head>img{
	width: 100%;
}
#item_name{
	overflow: hidden;
	box-shadow: 0 0 15px 6px #F7F7f7;
}
#item_name>div{
	width: 100%;
	float: left;
	text-align: center;
}
#item_name>div>span{
	margin: 6px 0;
	padding: 4px;
	display: inline-block;
}
.select>span{
	border-bottom: 2px solid #FF813E;
}
#doctor_information{
	height: 105px;
	padding: 15px;
	line-height: 27px;
	font-size: 15px;
}