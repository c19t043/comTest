				payAmountCaculation(productPrice,accountPoints,pointsProperties,accountBalance);
			}
		});
		$(".choose1").click(function () {
		 
				$(".ch1").animate({left: "0"});
				$(".ch1").attr('flag','off');
				payAmountCaculation(productPrice,accountPoints,pointsProperties,accountBalance);
