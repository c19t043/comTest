	})
	$(function(){
		$(".choose4").click(function () {
			if($('#canuse_sum').text() == '0'){
				ale("你没有可用的余额");
				return false;
			}
			$(".ch2").animate({left: "20"});
			$(".use_sum").show();
			$(".ch2").attr('flag','on');
			cashAmountCaculate(accountBalance);
		});
		$(".choose3").click(function () {
			$(".ch2").animate({left: "0"});
			$(".ch2").attr('flag','off');
			$(".use_sum").hide();
			cashAmountCaculate(accountBalance);
		});
	})
</script>
<script type="text/javascript">

    window.onload = function () {
        var strLong = null;
        var strLati = null;
        // 百度地图API功能
        function G(id) {
            return document.getElementById(id);
        }
        var map = new BMap.Map("");
        var ac = new BMap.Autocomplete(    //建立一个自动完成的对象
                {
                    "input": "street_address"
                    , "location": map
                });

        ac.addEventListener("onhighlight", function (e) {  //鼠标放在下拉列表上的事件
            var str = "";
            var _value = e.fromitem.value;
            var value = "";
            if (e.fromitem.index > -1) {
                value = _value.province + _value.city + _value.district + _value.street + _value.business;
            }
            str = "FromItem<br />index = " + e.fromitem.index + "<br />value = " + value;

            value = "";
            if (e.toitem.index > -1) {
                _value = e.toitem.value;
                value = _value.province + _value.city + _value.district + _value.street + _value.business;
            }
            str += "<br />ToItem<br />index = " + e.toitem.index + "<br />value = " + value;
            G("searchResultPanel").innerHTML = str;
        });

        var myValue;
        ac.addEventListener("onconfirm", function (e) {    //鼠标点击下拉列表后的事件
            var _value = e.item.value;
            myValue = _value.province + _value.city + _value.district + _value.street + _value.business;
            G("searchResultPanel").innerHTML = "onconfirm<br />index = " + e.item.index + "<br />myValue = " + myValue;

            setPlace();
        });

        function setPlace() {
            function myFun() {
                var pp = local.getResults().getPoi(0).point;    //获取第一个智能搜索的结果
                strLong = pp.lng;//经度
                strLati = pp.lat;//纬度
                //getStoreDetails(strLong, strLati);
            }

            var local = new BMap.LocalSearch(map, { //智能搜索
                onSearchComplete: myFun
            });
            local.search(myValue);
        }
    }
</script>
<script>
    $(function () {
        $('#parentInfo').click(function () {
            $('#outToAddress').show();
            $.ajax({
                type:'post',
                async:false,
                url:host+'getUserInfo.action',
                data:{
                    action:"getUser"
                },
                success:function(result){
                    var userProvince=result.usr.userProvince;
                    var userCity=result.usr.userCity;
                    var userArea=result.usr.userArea;
                    var userStreet=result.usr.userStreet;
                    var detailAddress=result.usr.detailAddress;
                    if(userArea!=null){
                        addressInit('addressProvince', 'addressCity', 'addressArea','四川','成都',userArea);
                    }else{
                        addressInit('addressProvince', 'addressCity', 'addressArea','四川','成都','武侯区');
                    }
//                alert($('#street_address').val());
//                $('#street_address').val(userStreet);
//                alert($('#street_address').val());
//                $('#xxaddress').val(detailAddress);
                },
                error: function () {
                    layer();
                }
            });

        });
        $('#addressHeader .header-right div').click(function () {
            var answer=confirm('您确定要修改吗？');
            if(answer==false){
                return false;
            }
            var userProvince=$.trim($("#addressProvince").val());
            var userCity=$.trim($("#addressCity").val());
            var userArea=$.trim($("#addressArea").val());
            var userStreet=$.trim($("#street_address").val());
            var detailAddress=$.trim($("#xxaddress").val());
            var myGeo = new BMap.Geocoder();
            myGeo.getPoint(userStreet, function(point){
                if (point) {
                    var userLng=point.lng;//经度
                    var userLat=point.lat;//纬度
                    $.ajax({
                        type:'post',
                        async:false,
                        url:host+'getUserInfo.action',
                        data:{
                            action:"updateUserAddress",
                            "usr.userProvince":userProvince,
                            "usr.userCity":userCity,
                            "usr.userArea":userArea,
                            "usr.userStreet":userStreet,
                            "usr.detailAddress":detailAddress,
                            "usr.userLng":userLng,
                            "usr.userLat":userLat
                        },
                        success:function(result){
                            $('.new_by_yjl').html(userProvince+userCity+userArea);
                            $('.new_by_yjl2').html(userStreet);
                            ale('修改成功');
                            setTimeout(function () {
                                $('#outToAddress').hide();
                            },2000);
                        },
                        error: function () {
                            layer();
                        }
                    });

                }else{
                    ale("请核对您的地址!");
                }
            }, userCity);
        });
    });
</script>
